<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.njaqn.itravel.aqnapp.M01WelComeActivity"
    android:id="@+id/frmWelcome" >

    <ImageView
        android:id="@+id/imgWelcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/m01_welcome"
        android:layout_gravity="center|top"
        android:scaleType="fitXY"
         />
    
    <ImageView
 	    android:id="@+id/imgJianTou"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:onClick="imgJianTouOnClick"
 	    android:layout_gravity="end|center"
 	    android:src="@drawable/m01_jian_tou"
 	    />

    </FrameLayout>
